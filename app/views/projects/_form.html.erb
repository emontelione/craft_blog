<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
  <div>
    <% @project.errors.full_messages.each do |error_message| %>
      <p><%= error_message %></p>
    <% end %>
  </div>
  <% end %>
  <p class="regular_text">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "title_field"%>
  </p>
 
  <p class="regular_text">
    <%= f.label :description %><br>
    <%= f.text_area :text, class: "text_box" %>
  </p>
  <p style="padding-bottom: 20px">
    <%= f.submit %>
  </p>
<% end %>
